<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Welcome TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome , "
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="34sp" />
    </LinearLayout>

    <!-- Select your class TextView -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select your class"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center" />

    <!-- BCA Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:onClick="clickforbca"
        android:text="BCA"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <!-- BSC Button -->
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:onClick="clickforbsc"
        android:text="BSC"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <!-- B.COM Button -->
    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:onClick="clickforbcom"
        android:text="B.COM"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <!-- BA Button -->
    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:onClick="clickforba"
        android:text="BA"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <!-- MA Button -->
    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:onClick="clickfoMa"
        android:text="MA"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <!-- Old Sem Q/P Button -->
    <Button
        android:id="@+id/button301"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:text="old sem q/p"
        android:textSize="24sp" />

    <!-- Search Any Problem Button -->
    <Button
        android:id="@+id/button300"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:text="search any problem"
        android:textSize="16sp" />

    <!-- Horizontal Layout for Two Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button408"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="TIK_TAK_TOE" />

    </LinearLayout>

</LinearLayout>
